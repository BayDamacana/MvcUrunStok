@using MvcUrunStok.Models.Entity
@model List<Urunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <td>@urn.urunid</td>
                <td>@urn.urunad</td>
                <td>@urn.urunkategori</td>
                <td>@urn.fiyat</td>
                <td>@urn.stok</td>
                <td><a href="/urun/sil/@urn.urunid" class="btn btn-danger">SİL</a></td>
                <td><a href="/urun/guncelle/@urn.urunid" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urun/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>
