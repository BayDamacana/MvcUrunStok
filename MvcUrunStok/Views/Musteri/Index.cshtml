@using MvcUrunStok.Models.Entity;
@model List<Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>MÜŞTERİ İD</th>
            <th>MÜŞTERİ ADI</th>
            <th>MÜŞTERİ SOYADI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <td>@mus.musteriid</td>
                <td>@mus.musteriad</td>
                <td>@mus.musterisoyad</td>
                <td><a href="/MUSTERI/sil/@mus.musteriid" class="btn btn-danger">SİL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@mus.musteriid" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>
